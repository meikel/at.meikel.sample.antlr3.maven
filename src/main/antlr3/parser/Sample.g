grammar Sample;

@header {
package parser;
}

@lexer::header {
package parser;
}


/*------------------------------------------------------------------
 * LEXER RULES
 *------------------------------------------------------------------*/

WHITESPACE : ( '\t' | ' ' | '\r' | '\n'| '\u000C' )+ 	{ $channel = HIDDEN; } ;

A : 'a' | 'A';
B : 'b' | 'B';


/*------------------------------------------------------------------
 * PARSER RULES
 *------------------------------------------------------------------*/

start	: A
		| (A B)
		| B
		;